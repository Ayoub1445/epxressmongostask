<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstarp cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Todo App</title>
</head>
<body style="background-color: #deeef8;" >
    <div align="center">
        <div style="background-color: #eef6fb; margin-top:10%; width:600px; border-radius:20px">
        <h1>Things I have To Do</h1>
        <!-- add Task -->
        <form action="/create" method ="POST">
            <input type="text" name="title">
            <button type="submit" class="btn btn-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                  </svg>
            </button>
         </form> <br>
         <!-- view the task -->
          <% if(todotasks.length > 0){ %>
         <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush"><% todotasks.forEach(tasks => { %>
                <li class="list-group-item"><%=tasks.title%></li>
                <% }) %>
            </ul>
         </div><br>
         <% } %>
        </div>
    </div>

</body>
</html>